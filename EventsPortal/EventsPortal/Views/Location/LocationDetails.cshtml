@model EventsPortal.Models.LocationModel

@{
    ViewData["Title"] = "LocationDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        margin-top:20px;
        background-color: #343a40;
        color: #ffffff; 
        padding-top: 20px;
    }

    .container {
        margin-top: 20px; 
        text-align: center; 
    }

    h1, h4 {
        color: #ffffff; 
    }

    hr {
        background-color: #ffffff; 
    }

    .row {
        margin-bottom: 20px; 
    }

    dl {
        text-align: left; 
    }

    dt, dd {
        color: #ffffff; 
    }

    img {
        max-width: 100%; 
        height: auto; 
        margin: 20px 0; 
    }

    a {
        color: #007bff;
    }

        a:hover {
            color: #0056b3;
        }
</style>

<div class="container">
    <h1>Location Details</h1>

    <div class="row">
        <div class="col-sm-10">
            <hr />
            <dl class="row">
                <dd class="col-sm-10" hidden>
                    @Html.DisplayFor(model => model.LocationID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LocationName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LocationName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LocationAdress)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LocationAdress)
                </dd>
                <dt class="col-sm-2">
                    Image
                </dt>
                <dd class="col-sm-10">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" alt="Location Image" class="img-fluid" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
