@model EventsPortal.Models.EventModel

@{
    ViewData["Title"] = "EventDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EventDetails</h1>

<div>
    <h4>EventModel</h4>
    <hr />
    <dl class="row">
        <dd class = "col-sm-10" hidden>
            @Html.DisplayFor(model => model.EventID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Participants)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Participants)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocationName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocationName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelectedPackageName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SelectedPackageName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelectedAdditionalServiceNames)
        </dt>
        <dd class="col-sm-10">
           @if (Model.SelectedAdditionalServiceNames != null)
                {
                    foreach (var serviceName in Model.SelectedAdditionalServiceNames)
                    {
                        <div>@serviceName</div>
                    }
                }
                else
                {
                    <div>No additional services</div>
                }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.EventID }) |
    <a asp-action="Index">Back to List</a>
</div>
